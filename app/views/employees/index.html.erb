<div class="container">
  
  <div class="col-md-12 well">
      <p id="notice"><%= notice %></p>

<h1>Listing Employees</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Salary</th>
      
      <th>Role</th>
      <th>Report To</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to  employee.id, employee_path(employee) %></td>
        <td><%= employee.name %></td>
        <td><%= employee.salary %></td>
        <td><%= employee.role %></td>
        <td><%= employee.report_to %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path, :class => "btn btn-primary"%>
  </div>
</div>
